Action add(y){
	put y to count[];
}

Action sub(){
	get y from count[];
}

Agent search_uav {
	add, sub;
}

Behavior add_one(){
	@init{}
	@goal{}
	@routine{
		add(1);
	}
}

Behavior sub_one(){
	@init{}
	@goal{}
	@routine{
		sub();
	}
}

Task search({agtC[stC~edC]}){
	@init{
		put 0 to count[];
	}
	@goal{}
	@routine{
		each agtC[stC~edC] {
			add_one();
			sub_one();		
		}
	}
}

Main {
	Agent search_uav 3;
	search({search_uav[0~3]});
}