Port : 41451

Action add_Action(s){
    return s+1;
}

Agent search_uav { 
	add_Action;
}

Behavior flyCircle_Behavior(){
	@init{
        step = 0;
	}
	@goal{
		get d from #done#;
		$ d == 3
	}
	@routine{
		step = add_Action(step);
		if(step == 200) {
			get d from #done#;
			put d+1 to #done#;
		}
	}
}

Task search({agtC[stC~edC]}){
	@init{
		put 0 to #done#;
	}
	@goal{}
	@routine{
		each agtC[stC~edC] {
			flyCircle_Behavior();
		}
	}
}

Main {
	Agent search_uav 3;
	search({search_uav[0~3]});
}